<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width">
    <title>Stock Master</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  </head>

  <header>
    <nav class="nav">
      <div class="nav-wrapper navbar-color">
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <a href="/" class="brand-logo right">Stock Master</a>
        <ul class="left hide-on-med-and-down compress">
          <% if current_user %>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            <li><%= link_to "Profile", current_user %> </li>
            <% if current_user.admin %>
              <li><%= link_to "All Users List", users_path %></li>
            <% else %>
              <li><%= link_to "My Cabinet", mycabinet_index_path %> </li>
            <% end %>
          <% else %>
            <li><%=link_to "Sign In", new_user_session_path %></li>
            <li><%=link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>
        <ul class="side-nav flow-text" id="mobile-demo">
          <% if current_user %>
            <% if current_user.admin %>
              <li><%= link_to "All Users List", users_path %></li>
            <% else %>
              <li><%= link_to "My Cabinet", mycabinet_index_path %> </li>
            <% end %>
            <li><%= link_to "Profile", current_user %> </li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%=link_to "Sign In", new_user_session_path %></li>
            <li><%=link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
  <script>
    $('.button-collapse').sideNav();
  </script>
</html>
